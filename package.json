{
  "name": "audioMotion",
  "version": "23.8.0-beta.1",
  "private": true,
  "author": "Henrique Vianna <hvianna@gmail.com> (https://henriquevianna.com)",
  "license": "AGPL-3.0",
  "description": "High-resolution real-time audio spectrum analyzer and music player",
  "main": "app/index.js",
  "scripts": {
    "build": "webpack",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "server": "node src/web-server.js",
    "pkg": "pkg . --out-path ./bin/"
  },
  "bin": "src/web-server.js",
  "pkg": {
    "assets": "public/**/*"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "app/audioMotion",
        "ignore": [
          "^(/bin$)",
          "^(/docs$)",
          "^(/src$)",
          "^(/.github$)",
          "^(/.well-known$)",
          ".editorconfig",
          ".gitignore",
          ".npmrc",
          "_config.yml",
          "docker-compose.yml",
          "^(/webpack.config.js$)"
        ],
        "extendInfo": {
          "NSMicrophoneUsageDescription": "Please allow access to your microphone",
          "com.apple.security.device.audio-input": true
        },
        "asar": false
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "audioMotion",
            "iconUrl": "https://raw.githubusercontent.com/hvianna/audioMotion.js/electron/app/audioMotion.ico",
            "setupIcon": "app/audioMotion.ico"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "app/audioMotion.icns"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "app/audioMotion.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "icon": "app/audioMotion.png"
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-dmg": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron/asar": "^3.2.4",
    "audiomotion-analyzer": "^4.1.0",
    "buffer": "^6.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "electron": "^22.3.18",
    "idb-keyval": "^6.2.1",
    "mini-css-extract-plugin": "^2.7.6",
    "music-metadata-browser": "^2.5.10",
    "notie": "^4.3.1",
    "open": "~7.4.2",
    "process": "^0.11.10",
    "readline-sync": "^1.4.10",
    "semver": "^7.5.4",
    "sortablejs": "~1.10.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "debounce": "^1.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "serve-index": "^1.9.1"
  },
  "optionalDependencies": {
    "appdmg": "^0.6.6"
  }
}
